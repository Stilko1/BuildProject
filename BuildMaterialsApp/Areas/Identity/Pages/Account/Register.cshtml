@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
	Layout = "";
}
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<style>
    .login-card-purple {
        background: linear-gradient(145deg, #ef9b12, #ffae00);
        
    }

    .col-4 {
        margin: auto;
    }

    body {
       
		display: flex;
        background: url('https://img.freepik.com/premium-photo/yellow-building-with-number-2-it_1217673-52547.jpg?semt=ais_hybrid');
        justify-content: center;
        align-items: center;
    }

        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 130%;
            background: url('https://img.freepik.com/premium-photo/yellow-building-with-number-2-it_1217673-52547.jpg?semt=ais_hybrid') no-repeat center center/cover;
            filter: blur(8px);
            z-index: -1;
        }
</style>
<div class="container">
    <div class="row m-4">
        <div class="col-4">
            <div class="login-card-purple p-3 shadow-lg rounded">
                <div class="pt-3">
                    <h2 class="text-white ">Sign In</h2>
                </div>

                <form class="mt-5" id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form">
                        <label asp-for="Input.FirstName" style="color:white;"></label>
                        <input asp-for="Input.FirstName" class="form-control" autocomplete="given-name" aria-required="true" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form">
                        <label asp-for="Input.LastName" style="color:white;"></label>
                        <input asp-for="Input.LastName" class="form-control" autocomplete="family-name" aria-required="true" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="form">
                        <label asp-for="Input.Adress" style="color:white;"></label>
                        <input asp-for="Input.Adress" class="form-control" autocomplete="street-address" aria-required="true" />
                        <span asp-validation-for="Input.Adress" class="text-danger"></span>
                    </div>
                    <div class="form">
                        <label asp-for="Input.UserName" style="color:white;"></label>
                        <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form">
                        <label asp-for="Input.Email" style="color:white;"></label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form">
                        <label asp-for="Input.Password" style="color:white;"></label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form">
                        <label asp-for="Input.ConfirmPassword" style="color:white;"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>


                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="rememberCheckBox">
                        <label class="form-check-label text-light" for="rememberCheckBox">Remember me?</label>
                    </div>

                    <div class="mt-5">
                        <button id="registerSubmit" type="submit" class="btn btn-sm btn-light col">Register</button>

                    </div>

                    <div class="mt-5">
                        <p class="text-white text-center">
                            Have an account?
                            <a href="~/Identity/Account/Login" class="text-warning">Click here to register</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

