@page
@model LoginModel

@{
	ViewData["Title"] = "Log in";
	Layout = "";
}


<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Builder Login</title>
	<style>
		body {
			font-family: 'Poppins', sans-serif;
			no-repeat center center/cover;
			display: flex;
			justify-content: center;
			align-items: center;
			height: 100vh;
			margin: 0;
		}

			body::before {
				content: "";
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background: url('https://img.freepik.com/premium-photo/yellow-building-with-number-2-it_1217673-52547.jpg?semt=ais_hybrid') no-repeat center center/cover;
				filter: blur(8px);
				z-index: -1;
			}


		.login-container {
			background: #ffae00;
			padding: 30px;
			border-radius: 8px;
			box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
			text-align: center;
			width: 400px;
			border-top: 5px solid #ffae00;
		}

			.login-container h2 {
				margin-bottom: 20px;
				color: #333;
				font-size: 24px;
			}

		.input-group {
			margin-bottom: 15px;
			text-align: left;
		}

			.input-group label {
				display: block;
				font-weight: 600;
				margin-bottom: 5px;
			}

			.input-group input {
				width: 100%;
				padding: 12px;
				border: 1px solid #ccc;
				border-radius: 6px;
				font-size: 16px;
			}

		.login-button {
			background: #ffae00;
			color: #fff;
			border: none;
			padding: 12px 15px;
			width: 100%;
			border-radius: 6px;
			cursor: pointer;
			font-size: 16px;
			font-weight: 600;
			transition: background 0.3s ease-in-out;
		}

			.login-button:hover {
				background: #e09e00;
			}

		.logo {
			font-size: 50px;
			margin-bottom: 15px;
			color: #ffae00;
		}
	</style>

</head>

<body>
		<link rel="stylesheet" href="StyleHome">
		<div class="login-container">
			<div class="logo">🚧</div>
			<h2>Builder Login</h2>
			<form id="account" method="post">
				<div class="input-group">
					<label asp-for="Input.UserName" class="form-label"></label>
					<input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" />
			
					<span asp-validation-for="Input.UserName" class="text-danger"></span>
				</div>
				<div class="input-group">
					<label asp-for="Input.Password" class="form-label"></label>
					<input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
				
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>
				<div>
					<button class="login-button">Login</button>
				</div>
			</form>
		</div>
</body>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}